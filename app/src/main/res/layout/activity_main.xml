<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="368dp"
    android:layout_height="495dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:id="@+id/input"
            android:layout_width="320dp"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="54dp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addButtonClicked"
            android:text="ADD"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="136dp"
            android:layout_marginTop="102dp"
            android:layout_below="@+id/input"
            android:layout_alignLeft="@+id/input"
            android:layout_alignStart="@+id/input" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="deleteButtonClicked"
            android:text="DELETE"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="136dp"
            android:layout_alignBaseline="@+id/addButton"
            android:layout_alignBottom="@+id/addButton"
            android:layout_alignRight="@+id/input"
            android:layout_alignEnd="@+id/input" />

        <TextView
            android:id="@+id/text"
            android:layout_width="329dp"
            android:layout_height="212dp"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="239dp"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/addButton"
            android:layout_alignLeft="@+id/addButton"
            android:layout_alignStart="@+id/addButton"
            android:layout_alignRight="@+id/deleteButton"
            android:layout_alignEnd="@+id/deleteButton" />

    </RelativeLayout>

